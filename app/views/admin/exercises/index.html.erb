<h1>Все упражнения</h1>

<ul class="normal">
<% @exercises.each do |exercise| %>
  <li><% image_tag "/images/exercises/#{exercise.first_image.filename if not nil?}", :width => 50 %>
	<%= link_to exercise.title, admin_exercise_url(exercise) %> |
	<%= link_to 'Изменить', edit_admin_exercise_url(exercise) %> |
	<%= link_to 'Удалить', admin_exercise_url(exercise), :confirm => 'Are you sure?', :method => :delete %>
  </li>
<% end %>
</ul>

<% content_for :middle_bar do %>
	<div class="widget_grey">
		<h3>Быстрый доступ</h3>
		<ul class="normal">
			<li><%= link_to "Добавить упражнение", new_admin_exercise_url %></li>
		</ul>
	</div>
<% end %>

<% content_for :sub_menu do %>
	<%= render :partial => "admin/menus/admin_main_submenu" %>
<% end %>
